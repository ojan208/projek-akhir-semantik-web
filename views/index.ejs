<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyek Akhir Semantik Web</title>
    <link rel="stylesheet" href="style/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

    <nav class="nav">
        <a href="/" class="logo">Serigala Awu Awu</a>
    </nav>

    <div class="container">
        <h2 class="page-title">Katalog Buku Toko Buku</h2>
        
        <nav>
            <ul class="pagination justify-content-center">
              <% if (page > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/?page=<%= page - 1 %>">Previous</a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">Previous</a>
                </li>
              <% } %>
              <li class="page-item">
                <a class="page-link" href="/?page=<%= page + 1 %>">Next</a>
              </li>
            </ul>
          </nav>

        <table>
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(book => { %>
                <tr>
                    <td><%= book.bookId %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.rating %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <nav>
            <ul class="pagination justify-content-center">
              <% if (page > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/?page=<%= page - 1 %>">Previous</a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">Previous</a>
                </li>
              <% } %>
              <li class="page-item">
                <a class="page-link" href="/?page=<%= page + 1 %>">Next</a>
              </li>
            </ul>
          </nav>
    </div>

</body>

</html> 
